<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splashscreen.SplashScreenActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/bg_splash"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_bcash" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_txt_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="BCASH"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cv_img"
        app:layout_constraintStart_toStartOf="@+id/cv_img"
        app:layout_constraintTop_toBottomOf="@+id/cv_img" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.0.0"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/tv_txt_version"
        app:layout_constraintStart_toStartOf="@+id/tv_txt_version"
        app:layout_constraintTop_toBottomOf="@+id/tv_txt_version" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_decs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_profile"
        app:layout_constraintEnd_toEndOf="@+id/tv_version"
        app:layout_constraintStart_toStartOf="@+id/tv_version"
        app:layout_constraintTop_toBottomOf="@+id/tv_version">

        <TextView
            android:id="@+id/tv_decs"
            android:layout_width="362dp"
            android:layout_height="319dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Welcome to BCASH, your sustainable solution for thrifting! In an effort to combat the growing issue of textile waste, our app is designed to make buying, selling, and exchanging pre-owned clothing easier and more enjoyable than ever. By providing a platform dedicated to the thrifting experience, BCASH not only helps reduce waste but also fosters a community where sustainability and affordability are at the forefront.\n \nBCASH is an innovative mobile application designed to address these issues head-on. Our platform enables users to buy, sell, and exchange pre-owned clothing items easily and efficiently. By encouraging the reuse of clothing, we aim to significantly reduce textile waste and support sustainable fashion practices."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:justificationMode="inter_word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header_md"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_form"
        app:layout_constraintEnd_toEndOf="@+id/cl_decs"
        app:layout_constraintStart_toStartOf="@+id/cl_decs"
        app:layout_constraintTop_toBottomOf="@+id/cl_decs">

        <TextView
            android:id="@+id/tv_txt_repo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Our Repository"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_repo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="https://github.com/Diassdp/B-Cash"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:autoLink="web"
            android:linksClickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_txt_repo"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt_repo" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
